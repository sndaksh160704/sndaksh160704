<div class="container">
    <div class="row">
        <div class="col-sm-4 border-right">
            <div class="d-flex flex-column align-items-center text-center p-3 py-5">
                <img class="rounded-circle mt-5" width="150px" src="images/images.jpg">
                <h4><span class="font-weight-bold ">Name</span></h4>
                <h4><span class="font-weight-bold">name.2021****@mnnit.ac.in</span></h4>
            </div>
        </div>
        <div class="col-sm-7">
            <div class="p-3 py-5">
                <div class="profile">
                    <u><h1 class="text-centre">Profile</h1></u>
                </div>
                <form action="/signup" method="POST">
                <div class="row">
                    <div class="col-sm-6"><label class="labels">Name</label><input type="text" class="form-control" placeholder="first name" value="" name="firstname"></div>
                    <div class="col-sm-6"><label class="labels">Surname</label><input type="text" class="form-control" value="" placeholder="surname" name="lastname"></div>
                </div>
                <div class="row mt-3">
                    <div class="col-sm-8"><label class="labels">Email</label><input type="text" class="form-control" placeholder="country" value="" name="email"></div>
                </div>
                <div class="row mt-3">
                    <div class="col-sm-12"><label class="labels">Mobile Number</label><input type="text" class="form-control" placeholder="enter mobile number" value="" name="phone"></div>
                    <div class="col-sm-12"><label class="labels">Set Your Password</label><input type="text" class="form-control" placeholder="set password" value="" name="password"></div>
                    <div class="col-sm-12"><label class="labels">Confirm Your Password</label><input type="text" class="form-control" placeholder="set password" value="" name="cpassword"></div>
                </div>
                <div class="mt-5 text-center"><button class="btn btn-primary profile-button" type="submit">Save Profile</button></div>
            </div>
        </div>
